@model IEnumerable<TagModel>

@{
    ViewData["Title"] = "Tags popularity";
}

<div class="text-center">
    <h1>First 1000 most popular tags on stackoverflow</h1>
    @if (Model is null || Model.Count() == 0)
    {
        <p><strong>NO DATA</strong></p>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Place</th>
                    <th>Name</th>
                    <th>Count</th>
                    <th>Procentage</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model.ElementAt(i).Name</td>
                        <td>@Model.ElementAt(i).Count</td>
                        <td>@string.Format($"{Model.ElementAt(i).Procentage:F}%")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
